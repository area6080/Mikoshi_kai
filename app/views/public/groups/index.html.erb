
<div class="container">
  <div class="row d-flex justify-content-center">
    <div class="col-md-8 col-sm-12">
      <div class="row mt-5">
        <table class="table matsuri-style">
          <thead>
            <tr>
              <th class="col-8">グループ名</th>
              <th class="col-4"></th>
            </tr>
          </thead>
          <tbody>
            <% @groups.each do |group| %>
              <tr>
                <td>
                <%= link_to(group_path(group.id), class: "matsuri-style") do %>
                  <strong><i class="fa-solid fa-people-group"></i><span> <%= group.name %></span></strong>
                <% end %>
                </td>
                <td>
                  <% if group.is_owned_by?(current_user) %>
                    <%= link_to "編集", edit_group_path(group),class: "btn btn-sm btn-success" %>
                    <%= link_to "削除",group_path(group), method: :delete, class: "btn btn-sm btn-danger", "data-confirm" => "グループを削除してよろしいですか?" %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="row d-flex justify-content-center mt-2">
        <div class="col-12 d-flex justify-content-center">
          <%= link_to 'マップに戻る', map_path, class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  </div>
</div>
