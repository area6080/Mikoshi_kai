<div class="container">
  <div class="row d-flex justify-content-center">
    <div class="col-md-6 col-sm-12 border border-light mt-5">
      <h5 class="text-center p-4 mb-0">ユーザー編集</h5>
      <div class="form-body p-4">
        
        <%= form_with model: @user, method: :patch do |f| %>
          <div class="d-flex justify-content-center">
            <% if @user.profile_image.attached? %>
              <%= image_tag @user.profile_image, size: "150x150" %>
            <% else %>
              <%= image_tag "no_image.jpg", size: "150x150" %>
            <% end %>
          </div>
          <%= f.file_field :profile_image, accept: "image/*", class: "mt-1" %>
          
          <div class="input-group mb-3 mt-4">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fa-solid fa-user-secret"></i></span>
            </div>
            <%= f.text_field :name, class: "form-control", required: true %>
          </div>
          
          <div class="input-group mb-3 mt-4">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fa-solid fa-pen-to-square"></i></span>
            </div>
            <%= f.text_area :introduction, class: "form-control"%>
          </div>
          
          <%= f.submit 'Update', class: "btn btn-block btn-success mt-2" %>
          <div class="d-flex justify-content-end">
            <%= link_to "退会", user_path(@user), method: :delete,class:'btn btn-danger mt-1', "data-confirm" => "本当に退会しますか?" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

