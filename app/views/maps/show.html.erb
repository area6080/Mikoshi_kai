<div class="container mt-4">
  <div class="row">
    <div id="map"></div>
  </div>
  <div class="row my-3">
    <div class="col-md-6 col-sm-12 d-flex justify-content-around mt-2">
      <%= link_to post_events_path, class: 'btn btn-info' do %>
        <i class="fa-solid fa-map-location"></i><span>イベント一覧</span>
      <% end %>
      <!--%= link_to 'イベント投稿', new_post_event_path, class: 'btn btn-primary mt-2' %>-->
      <%= render 'maps/create', post_event: @post_event %>
    </div>
    <div class="col-md-6 col-sm-12 d-flex justify-content-end mt-2">
      <%= link_to 'グループ一覧', groups_path, class: 'btn btn-info' %>
      <%= link_to 'グループ作成', new_group_path, class: 'btn btn-primary ml-2' %>
    </div>
  </div>
</div>
<%= javascript_pack_tag 'map', 'data-turbolinks-track': 'reload' %>
