<!-- Button trigger modal -->
<button type="button" class="btn btn-primary map-btn mt-2" data-toggle="modal" data-target="#CreateEvent">
  イベント投稿
</button>

<!-- Modal -->
<div class="modal fade" id="CreateEvent" tabindex="-1" role="dialog" aria-labelledby="CreateEventTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title text-dark" id="CreateEventTitle">イベント投稿フォーム</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body text-dark">
        <%= form_with model: @post_event do |f| %>
          <%= f.file_field :image, accept: "image/*", class: "w-100" %>
        
          <div class="input-group mb-3 mt-4">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fa-solid fa-font-awesome"></i></span>
            </div>
            <%= f.text_field :title, class: "form-control", placeholder: "イベント名" %>
          </div>
          
          <div class="input-group mb-3 mt-4">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fa-solid fa-calendar"></i></span>
            </div>
            <%= f.text_field :event_date, class: "form-control", placeholder: "開催日時" %>
          </div>
          
          <div class="input-group mb-3 mt-4">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fa-solid fa-location-dot"></i></span>
            </div>
            <%= f.text_field :address, class: "form-control", placeholder: "住所" %>
          </div>
          
          <%= f.text_area :caption, class: "form-control", rows: "3", placeholder: "イベントの説明を記入してください" %>
          <%= f.submit '投稿', class: "btn  btn-block btn-info mt-2" %>
        <% end %>
      </div>
    </div>
  </div>
</div>